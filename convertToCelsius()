Description: A C program that converts temperature from Fahrenheit to Celsius
*/

#include <stdio.h>

float convertToCelsius(float fahrenheit) {
    float celsius ;
    celsius = (fahrenheit - 32) * 5 / 9;  
    return celsius;                        
}

int main() {
    float f;
    float c;

    // prompt user to enter temperature in Fahrenheit
    printf("Enter temperature in Fahrenheit:\n ");
    scanf("%f", &f);

    c = convertToCelsius(f);

    // Display result
    printf("Temperature in Celsius = %.fÂ°C\n", c);

    return 0;
}